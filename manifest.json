{
    "manifest_version": 3,
    "name": "ai-image-detector",
    "version": "1.0",
    "description": "Determine whether an image is ai generated or not.",
    "icons": {
        "48": "icons/magnify.jpg"
    },

    "browser_specific_settings": {
    "gecko": {
      "id": "inference@example.org",
      "strict_min_version": "109.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "action": {
    "default_icon": "icons/magnify.jpg",
    "default_title": "Open AI Image Detector"
  },

  "sidebar_action": {
    "default_icon": "icons/magnify.jpg",
    "default_title": "AI Image Detector",
    "default_panel": "panel/input.html"
  },

  "permissions": ["nativeMessaging"]
}